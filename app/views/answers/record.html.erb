

<form method="POST" action="/answers/save">
<div class="row-fluid" style="margin-top:50px;">
	<div class="span4"></div>
	<div class="span4 output" style="text-align:center; font-weight: bold; font-size: 110%;">
		Section => <%=@question.section.titlecase %> | Question =>   <%=@question.question_number%>
	</div>
	<div class="span4"></div>
</div>
<div class="row-fluid" style="margin-top: 5px;">
	<div class="span4"></div>
	<div class="span2">
			<input type="hidden" value="<%= @question.id %>" name="question_id">
			<!--add authenticity token for CSRF protection-->
			<%= token_tag(nil) %>
			<select name="ans_choice"> 
			<% @question.correctAnswerOptions.each do |letter| %>
				<option value="<%= @question.ansChoiceNumber(letter) %>"><%= letter %></option>
			<% end %>
		</select>
	</div>
	<div class="span1"><button class="btn btn-primary">Submit</button></div>	
	<div class="span1 output" id="timer">0:00</div>
	<div class="span4">
		 <input type="hidden" id="minutes" value=0><input type="hidden" id="seconds" value=0>
	</div>
</div>

<div class="row-fluid">
	<div class="span4"></div>
	<div class="span1"><button type="button" class="btn btn-success" id="prev-page" button="button">Prev</button></div>
	<div class="span2"></div>
	<div class="span1"><button type="button" style="float: right;" class="btn btn-success" id="next-page" action="test">Next</button></div>
	<div class="span4"></div>
</div>

<div class="row-fluid">
	<div class="span2"></div>
	<div class="span8"></div>
		<%= image_tag @filename, size: "950x110", style: "display: block; margin-left: auto; margin-right: auto;", id: "q-img"%>
	</div>
	<div class="span2"></div>
</form>

<input type="hidden" value="<%= @question.maxpage %>" id="maxpage">