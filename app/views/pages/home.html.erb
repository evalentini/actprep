

<div class="row-fluid" style="margin-top: 25px;">
	<div class="col-xs-12">
		<p></p>
	</div>
</div>



	<div class="row-fluid" style="margin-top: 25px;">
		<%= token_tag(nil) %>
		<div class="col-xs-8">
			<div class="well">
				<form class="form-inline" role="form">
				  <div class="form-group">
				    <label for="sectionfilter">Section &nbsp &nbsp </label>
				    <select class="form-control" id="sectionfilter" name="sectionfilter">
						<%= createOptList(Question.sectionListWithAll, "all").html_safe %>
					</select>
				  </div>
				  <div class="form-group">
				    <label for="correctfilter">&nbsp &nbsp Correctness &nbsp &nbsp</label>
				    <select class="form-control" id="correctfilter" name="correctfilter">
						<%= createOptList(
							{
								"All"=>"all",
								"Correct"=>"correct", 
								"Incorrect"=>"incorrect",
								"Not Attempted"=>"na"
							}, "all").html_safe %>
					</select>
				  </div>
				  <div class="form-group">
				    <label for="timefilter">&nbsp &nbsp Fast &nbsp &nbsp</label>
				    <select class="form-control" id="timefilter" name="timefilter">
						<%= createOptList(
							{
								"All"=>"all",
								"Fast"=>"fast", 
								"Slow"=>"slow",
							}, "all").html_safe %>
					</select>
				  </div>
				  <button type="submit" class="btn btn-default">Filter</button>
				</form>

				
			</div>
		</div>
		<div class="col-xs-4">
		</div>
	</div>
	
	<div class="row-fluid" style="margin-top: 5px;">
		<div class="col-xs-12">

			<div class="panel panel-success">
				<div class="panel-heading">
					<h4>Question Summary</h4>
				</div>
			
				<div class="panel-body">
					
					<table class="table table-bordered">
						<thead>
						  <tr>
							<th>Test</th>
							<th>Section</th>
							<th>Question</th>
							<th>Correct</th>
							<th>Time Taken</th>
							<th></th>
						  </tr>
						</thead>
						<tbody>
							<% @questions.each do |question| %>
							<tr>
								<td><%= question.test_number%>MC</td>
								<td><%= question.section.titlecase %></td>
								<td><%= question.question_number %></td>
								<td>Yes</td>
								<td>1:00</td>
								<td><a href="/answers/record/<%= question.id %>">Try Problem</a></td>
							</tr>
							<% end %>
						</tbody>
					</table>
					
					
				</div>
			</div>
		</div>
	</div>
</div>

