
<!-- Modal -->
<div id="myModal-<%= question_id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= "#{Question.find(question_id).section.capitalize} Question #{Question.find(question_id).question_number} " %></h3>
  </div>
  <div class="modal-body">
	<% @explanation_text = Question.find(question_id).explanation || "Explanation not available." %>
    <% @explanation_text.gsub("\r", "").split("\n").each do |line| %>
		<%= line %><br>
	<% end %>
  </div>
  <div class="modal-footer">
    <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>