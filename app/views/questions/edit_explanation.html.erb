<div class="row-fluid">
	<div class="span1"></div>
	<div class="span10">
		<div class="row-fluid headerrow"><div class="span12">Type In Explanation...</div></div>
		<div class="row-fluid typedexplanationcontent">
			<div class="span12">
				<%= form_tag post_edit_explanation_path, method: :get do -%>
				<textarea id="edit-exp-area" style="width: 800px; height: 150px;" name="explanation">
					<%= @question.explanation %>
				</textarea>
				<input name="id" type="hidden" value="<%= @question.id %>"><br>
			</div>
		</div>
		<div class="row-fluid headerrow">
			<div class="span12">...Or Upload Image File With Explanation (MUST BE JPG)</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<input type="file" name="upload_filename"><br><br>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<button class="btn btn-primary">Save</button>
				<% end -%>
			</div>
		</div>
		
	</div>
	
	<div class="span1"></div>
</div>