<div class="row-fluid">
	<div class="span1"></div>
	<div class="span10">
		<div class="row-fluid headerrow"><div class="span12">Type In Explanation...</div></div>
		<div class="row-fluid typedexplanationcontent">
			<div class="span12">
				<%= form_for @question, :url => post_edit_explanation_path, :html=>{:multipart=>true}, :method => :post do |form| -%>
				<textarea id="edit-exp-area" style="width: 800px; height: 150px;" name="explanation">
					<%= @question.explanation %>
				</textarea>
				<input name="id" type="hidden" value="<%= @question.id %>"><br>
			</div>
		</div>
		<div class="row-fluid headerrow">
			<div class="span12">...Or Upload Image File With Explanation</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<%= form.file_field :explanation_image %><br><br>
			</div>
		</div>
		<% if @question.explanation_image.present? %>
		<div class="row-fluid headerrow">
			<div class="span12">Current Explanation Image</div>
		</div>
		<div class="row-fluid">
			<a href="/questions/deleteimage/<%=@question.id%>" class="btn btn-danger">Delete Image</a><br><br>
			<div class="span12" style="border: 1px solid; margin-bottom: 15px;">
				<%= image_tag @question.explanation_image.url %>
			</div>
		</div>
		<% end %>

		<div class="row-fluid">
			<div class="span12">
				<button class="btn btn-primary">Save</button>
				<% end %>
			</div>
		</div>
		
	</div>
	
	<div class="span1"></div>
</div>