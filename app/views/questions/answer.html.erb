
<div class="row-fluid">
	<div class="span1"></div>
	<div class="span5">
		<div class="row-fluid" style="margin-bottom:25px;"><div class="span12"><h1> Answer Question </h1></div></div>
		<form method="post" action="/answers/record/<%= @default_q.id %>" >
		
			<!--add authenticity token for CSRF protection-->
			<%= token_tag(nil) %>

			<div class="row-fluid">
				<div class="span3"><strong>Select Test</strong></div>
				<div class="span9">
					<select id="question-answer-test-number" name="test_number">
						<% @tests.each do |test| %>
							<option value="<%=test.test_number%>"
								<% if @default_q.test_number == test.test_number %>
									selected="selected"
								<% end %>
							>
								<%=test.test_number%>
							</option>
						<% end %> 
					</select>
				</div>
			</div>
			
		    <div class="row-fluid">
				<div class="span3"><strong>Select Section:</strong></div>
				<div class="span9">
					<select id="question-answer-section" name="section">
						<% @sections.each do |section| %>
							<option value="<%=section.section%>" 
								<% if @default_q.section == section.section %>
									selected="selected"
								<% end %>
							>
								<%=section.section%>
							</option>
							<%end%> 
					</select>
				</div>
			</div>
			
		    <div class="row-fluid">
				<div class="span3"><strong>Select Question:</strong></div>
				<div class="span9">
					<select id="question-answer-question" name="question">
						<% (1..@num_questions).each do |q| %>
							<option value="<%= q %>"><%= q %></option>
						<% end %>
					</select>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span12"><button class="btn btn-primary">Answer Question</button></div>
			</div>


			
	</div>

	</form>
	
	<div class="span1"></div>

</div>
